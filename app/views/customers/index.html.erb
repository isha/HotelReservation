<div class="row">
  <h1 class="page-header text-center">Listing Customers</h1>
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
  </div>
  <div class="col-md-10">
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th colspan="3"></th>
      </tr>

      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.phone_number %></td>
          <td><%= link_to 'Show', customer_path(customer) %></td>
          <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
          <td><%= link_to 'Destroy', customer_path(customer),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>