<div class="row">
  <h1 class="page-header text-center">Listing Employees</h1>
</div>

<div class="row">
  <div class="col-md-2">
    <%= link_to 'New Employee', new_employee_path, class: "btn btn-primary" %>
  </div>
  <div class="col-md-10">
    <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.name %></td>
          <td><%= link_to 'Show', employee_path(employee) %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          <td><%= link_to 'Destroy', employee_path(employee),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
