<div class="row">
  <h1 class="page-header text-center">Listing Rooms</h1>
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'New Room', new_room_path, class: "btn btn-primary" %>
  </div>
  <div class="col-md-10">
    <table class="table table-striped">
  <tr>
    <th>Room Number</th>
    <th>Type</th>
    <th colspan="3"></th>
  </tr>

  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.r_number %></td>
      <td><%= room.r_type %></td>
      <td><%= link_to 'Show', room_path(room) %></td>
    </tr>
  <% end %>
</table>
